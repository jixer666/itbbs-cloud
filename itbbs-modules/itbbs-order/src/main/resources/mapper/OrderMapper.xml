<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.itbbs.order.mapper.OrderMapper">

    <resultMap type="Order" id="OrderResult">
            <result property="orderId"    column="order_id"    />
            <result property="orderSn"    column="order_sn"    />
            <result property="userId"    column="user_id"    />
            <result property="biz"    column="biz"    />
            <result property="orderType"    column="order_type"    />
            <result property="couponId"    column="coupon_id"    />
            <result property="totalAmount"    column="total_amount"    />
            <result property="freightAmount"    column="freight_amount"    />
            <result property="couponAmount"    column="coupon_amount"    />
            <result property="integrationAmount"    column="integration_amount"    />
            <result property="payType"    column="pay_type"    />
            <result property="growth"    column="growth"    />
            <result property="paymentTime"    column="payment_time"    />
            <result property="validTime"    column="valid_time"    />
            <result property="createTime"    column="create_time"    />
            <result property="updateTime"    column="update_time"    />
            <result property="status"    column="status"    />
            <result property="ver"    column="ver"    />
    </resultMap>

    <sql id="selectOrderVo">
        select order_id, order_sn, user_id, biz, order_type, coupon_id, total_amount, freight_amount, coupon_amount, integration_amount, pay_type, growth, payment_time, valid_time, create_time, update_time, status, ver from tb_order
    </sql>

    <select id="selectOrderList" resultMap="OrderResult">
        <include refid="selectOrderVo" />
    </select>


</mapper>
