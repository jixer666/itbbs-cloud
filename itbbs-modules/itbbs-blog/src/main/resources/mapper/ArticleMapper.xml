<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.itbbs.blog.mapper.ArticleMapper">

    <resultMap type="Article" id="ArticleResult">
            <result property="articleId"    column="article_id"    />
            <result property="userId"    column="user_id"    />
            <result property="title"    column="title"    />
            <result property="content"    column="content"    />
            <result property="summary"    column="summary"    />
            <result property="categoryId"    column="category_id"    />
            <result property="tagDetails"    column="tag_details"    />
            <result property="cover"    column="cover"    />
            <result property="type"    column="type"    />
            <result property="visibleRange"    column="visible_range"    />
            <result property="creationStatement"    column="creation_statement"    />
            <result property="viewsCount"    column="views_count"    />
            <result property="likeCount"    column="like_count"    />
            <result property="commentCount"    column="comment_count"    />
            <result property="shareCount"    column="share_count"    />
            <result property="htmlFilePath"    column="html_file_path"    />
            <result property="collectCount"    column="collect_count"    />
            <result property="createTime"    column="create_time"    />
            <result property="updateTime"    column="update_time"    />
            <result property="status"    column="status"    />
            <result property="ver"    column="ver"    />
    </resultMap>

    <resultMap type="com.abc.itbbs.blog.domain.vo.ArticleMetaVO" id="ArticleMetaResult">
        <result property="viewsCount"    column="views_count"    />
        <result property="likeCount"    column="like_count"    />
        <result property="collectCount"    column="collect_count"    />
        <result property="commentCount"    column="comment_count"    />
        <result property="shareCount"    column="share_count"    />
    </resultMap>

    <sql id="selectArticleVo">
        select article_id, user_id, title, content, summary, category_id, tag_details, cover, type, visible_range, html_file_path, creation_statement, views_count, like_count, collect_count, comment_count, share_count, create_time, update_time, status, ver from tb_article
    </sql>

    <sql id="selectArticleWithoutVo">
        select article_id, user_id, title, summary, category_id, tag_details, cover, type, visible_range, views_count, like_count, collect_count, comment_count, share_count, create_time, status, ver, html_file_path from tb_article
    </sql>

    <select id="selectArticleList" resultMap="ArticleResult">
        <include refid="selectArticleWithoutVo" />
        <where>
            <if test="status != null">and status = #{status}</if>
        </where>
        <choose>
            <when test="loadType != null and loadType == 1">
                order by create_time desc
            </when>
            <when test="loadType != null and loadType == 2">
                order by
                (
                    -- 总公式：热度分 = (互动分 × 质量因子) ÷ 时间衰减因子
                    -- 互动分
                    (like_count * 0.5 + comment_count  * 0.4 + collect_count * 0.3 + share_count  * 0.2)
                    -- 质量分（考虑浏览转化率）
                    * (CASE
                    WHEN views_count > 0 THEN
                        (like_count + comment_count) / views_count
                    ELSE 0
                    END + 1)
                    -- 时间衰减（牛顿冷却定律）
                    / EXP(
                        (UNIX_TIMESTAMP(NOW()) - UNIX_TIMESTAMP(create_time))
                        / (3600 * 24)  -- 转换为天数
                        * 0.05  -- 衰减系数
                    )
                )
                desc
            </when>
        </choose>

        <if test="pageNum != null">
            limit #{beginPage}, #{pageSize}
        </if>
    </select>

    <select id="selectArticleListWithoutContent" resultMap="ArticleResult">
        <include refid="selectArticleWithoutVo" />
        <where>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
    </select>

    <select id="selectArticleMetaInfo" resultMap="ArticleMetaResult">
        select views_count, like_count, collect_count from tb_article
        where article_id = #{articleId}
    </select>

    <select id="selectByIds" resultMap="ArticleMetaResult">
        select article_id, user_id, title, content, summary, category_id, tag_details, cover, type from tb_article
        where article_id in
        <foreach collection="list" item="id" open="(" separator=", " close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectArticleViewsCount" resultType="java.lang.Integer">
        select views_count from tb_article where article_id = #{articleId}
    </select>

    <select id="selectArticleLikeCount" resultType="java.lang.Integer">
        select like_count from tb_article where article_id = #{articleId}
    </select>

    <select id="selectArticleCollectCount" resultType="java.lang.Integer">
        select collect_count from tb_article where article_id = #{articleId}
    </select>

    <update id="updateArticleCountBath">
        <foreach collection="list" item="item" separator=";">
            UPDATE tb_article
            SET
            views_count = #{item.viewsCount},
            like_count = #{item.likeCount},
            collect_count = #{item.collectCount}
            WHERE article_id = #{item.articleId}
        </foreach>
    </update>


</mapper>
